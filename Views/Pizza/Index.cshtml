<table class="table">
    <thead>
        <th>Name</th>
        <th>Description</th>
        <th>Image</th>
        <th>Price</th>
        <th></th>
    </thead>
    <tbody>
        
        @foreach(Pizza pizza in Model)
        {
            <tr>
                <td>@pizza.Name</td>
                <td>@pizza.Description</td>
                <td><div class="container-image"><img src="@pizza.Image"></div></td>
                <td>@(pizza.Price)&euro;</td>
                <td><a class="btn btn-primary" href="@Url.Action("Detail", "Pizza", new {@pizza.Id})" >Visualizza</a></td>
            </tr>
        }
       
    </tbody>
</table>

